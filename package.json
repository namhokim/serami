{
    "name": "serami",
    "version": "1.0.1",
    "description": "mix up handlebars with confluence",
    "main": "dist/main/index.js",
    "scripts": {
        "build": "webpack",
        "watch": "webpack --watch",
        "start": "electron .",
        "test": "echo \"Error: no test specified\" && exit 1",
        "package": "npm run bundle && electron-packager dist \"Serami\" --platform=darwin --arch=x64 --out=release --icon=\"icon/icon\" --app-version=$npm_package_version",
        "bundle": "npm run prebuild && webpack",
        "prebuild": "npm run copy:resources && npm run copy:photon",
        "copy:resources": "cpx \"prod_resources/**/*\" dist",
        "copy:photon": "cpx \"node_modules/photon/dist/css/**/*\" dist/css && cpx \"node_modules/photon/dist/fonts/**/*\" dist/fonts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/namhokim/serami.git"
    },
    "keywords": [
        "script",
        "automation",
        "template",
        "js"
    ],
    "author": "namo",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/namhokim/serami/issues"
    },
    "homepage": "https://github.com/namhokim/serami#readme",
    "devDependencies": {
        "@babel/core": "^7.16.0",
        "@babel/preset-env": "^7.16.0",
        "@babel/preset-react": "^7.16.0",
        "babel-loader": "^8.2.3",
        "cpx": "^1.5.0",
        "css-loader": "^6.5.1",
        "electron": "^15.3.1",
        "electron-packager": "^15.4.0",
        "style-loader": "^3.3.1",
        "webpack": "^5.64.0",
        "webpack-cli": "^4.9.1"
    },
    "dependencies": {
        "handlebars": "^4.7.7",
        "photon": "github:connors/photon",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "safe-eval": "^0.4.1"
    }
}
